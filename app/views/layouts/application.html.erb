<!DOCTYPE html>
<html>
  <head>
    <title>Heed</title>

    <link rel="icon" href="favicon.ico" type="image/x-icon"> 
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon"> 

    <%= stylesheet_link_tag "reset.css", "style.css" %>
    <%= javascript_include_tag "jquery-1.6.2.min.js", "jquery.jqDock.min.js", "gallery.js", "simpleSlider.js"%>
    <%= javascript_include_tag "application.js" %>

    <script>
      jQuery(document).ready(function(){
        jQuery('#footer #menu').jqDock();
        jQuery('#slideshow').simpleSlider();
      });
    </script>

    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        <%= render :partial => "layouts/header" %>
      </div>
      <div id="content">
        <%= yield %>
      </div>
      <div id="footer">
        <%= render :partial => "layouts/footer" %>
      </div>
    </div>
  </body>
</html>
