<!DOCTYPE html>
<html>
  <head>
    <title>Heed</title>

    <link rel="icon" href="favicon.ico" type="image/x-icon"> 
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon"> 

    <%= stylesheet_link_tag "reset.css", "style.css" %>
    <%= javascript_include_tag "jquery-1.6.2.min.js", "jquery.easing.1.3.js", "jquery.coda-slider-2.0.js", "jquery.jqDock.min.js", "gallery.js" %>
    <%= javascript_include_tag "application.js" %>

    <script>
      $().ready(function() {
            $('#coda-slider').codaSlider({
                autoSlide: true,
                autoSlideInterval: 8000,
                autoSlideStopWhenClicked: true,
                dynamicArrows: false,
                dynamicTabs: false
            });
        });

      jQuery(document).ready(function(){
        jQuery('#menu').jqDock();
      });
    </script>

    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        <%= render :partial => "layouts/header" %>
      </div>
      <div id="content">
        <%= yield %>
      </div>
      <div id="footer">
        <%= render :partial => "layouts/footer" %>
      </div>
    </div>
  </body>
</html>
