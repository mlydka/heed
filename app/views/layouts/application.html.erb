<!DOCTYPE html>
<html>
  <head>
    <title>Heed</title>

    <link rel="icon" href="favicon.ico" type="image/x-icon"> 
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon"> 

    <%= stylesheet_link_tag "reset.css", "style.css", "coda-slider-2.0.css" %>
    <%= javascript_include_tag "jquery-1.6.2.min.js", "jquery.easing.1.3.js", "jquery.coda-slider-2.0.js" %>
    <%= javascript_include_tag "application.js" %>

    <script>
      $().ready(function() {
            $('#coda-slider').codaSlider({
                autoSlide: true,
                autoSlideInterval: 5000,
                autoSlideStopWhenClicked: true,
                dynamicArrows: false,
                dynamicTabs: false
            });
        });
    </script>

    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        <%= render :partial => "layouts/header" %>
      </div>
      <div id="slider">
        <%= render :partial => "layouts/slider" %>
      </div>
      <div class="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
